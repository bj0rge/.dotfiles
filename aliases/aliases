alias ga='git add'
alias gA='git add -A'
alias gc='git commit -m'
alias gl="git log --first-parent --pretty=\"format:%C(auto,yellow)%h %C(auto,blue)%>(12,trunc)%ad %C(auto,green)%<(7,trunc)%aN%C(auto,reset)%s%C(auto,red)% gD% D\""
alias gac='git commit -am'
alias gAc='git add -A && git commit -m'
